@model UniversityProject.Models.Student
@{
	/**/

	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm())
{
	<div class="form-group">
		@Html.LabelFor(model => model.StudentName)

		@Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Email)

		@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.ContactNo)

		@Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.RegistrationDate)
		<p><input type="text" id="datepicker" name="RegistrationDate" class="form-control"></p>
		@Html.TextBoxFor(m => m.RegistrationDate, new { @Value = Model.RegistrationDate.ToString("dd/MM/yyyy"), @class = "datepicker" })
	</div>
}
}
}




